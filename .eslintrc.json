{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "next/core-web-vitals"],
  "settings": {
    "next": {
      "rootDir": "./nextjs/"
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-undef": "off",
        "react/no-unknown-property": [
          2,
          {
            "ignore": [
              "jsx"
            ]
          }
        ]  
      }
    }
  ]
}
